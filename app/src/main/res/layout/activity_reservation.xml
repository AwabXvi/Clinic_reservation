<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".Reservation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:gravity="clip_horizontal"
        android:text="Please Select a Clinic And a doctor and confirm :"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="454dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="26dp"
            android:gravity="center|clip_horizontal"
            android:text="Clinic :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/clinic_spinner"
            android:layout_width="202dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginEnd="29dp"
            android:background="@android:drawable/spinner_dropdown_background" />

        <TextView
            android:id="@+id/doctor_txt"
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="108dp"
            android:gravity="center|clip_horizontal"
            android:text="Doctor :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/doctors_spinner"
            android:layout_width="199dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/clinic_spinner"
            android:layout_alignTop="@+id/doctor_txt"
            android:background="@android:drawable/spinner_dropdown_background" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="78dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="92dp"
            android:layout_marginStart="22dp"
            android:gravity="center|clip_horizontal"
            android:text="Price :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/price_txt"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_alignStart="@+id/end_txt"
            android:layout_alignTop="@+id/textView5"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/Confirm_btn"
            style="@style/Base.CardView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ea3434"
            android:text="Confirm"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/start_string"
            android:layout_width="99dp"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="189dp"
            android:gravity="left|center|clip_horizontal"
            android:text="Start Time :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/end_string"
            android:layout_width="99dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="151dp"
            android:gravity="left|center|clip_horizontal"
            android:text="End Time :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/start_txt"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_alignStart="@+id/price_txt"
            android:layout_alignTop="@+id/start_string"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/end_txt"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/end_string"
            android:layout_marginEnd="82dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>