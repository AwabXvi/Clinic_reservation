<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base.Theme.MaterialComponents.Dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Profile"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_img"
        android:layout_width="138dp"
        android:layout_height="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="51dp" />


    <ImageButton
        android:id="@+id/Edit_btn"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/Name"
        android:layout_toEndOf="@+id/Name"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:src="@drawable/editicon" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="263dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Awab Mohammed"
        android:theme="@style/Base.AlertDialog.AppCompat.Light" />

    <TextView
        android:id="@+id/NameTag"
        android:layout_width="61dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/continue_btn"
        android:layout_alignTop="@+id/Name"
        android:gravity="center"
        android:text="Name :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp" />

    <Button
        android:id="@+id/continue_btn"
        style="@style/Base.CardView"
        android:layout_width="315dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="#5ec45e"
        android:text="Continue"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Phone_field"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="+24911857471"
        android:inputType="phone"
        android:theme="@style/Base.AlertDialog.AppCompat.Light" />

    <TextView
        android:id="@+id/Phone_field"
        android:layout_width="62dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/NameTag"
        android:layout_marginTop="326dp"
        android:gravity="center"
        android:text="Phone:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Warring_number"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/Edit_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="131dp"
        android:gravity="center"
        android:text="Please Enter your Current Phone Number"
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>
